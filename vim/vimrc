	\  '^\.git$', '^\.hg$', '^\.svn$', '^\.bzr$',
	\  '\.aux$', '\.alg$', '\.acr$', '\.bbl$', '\.blg$', '\.toc$', '\.snm$', '\.out$', '\.nav$', '\.acn$',
  \  '\.glg$', '\.glo$', '\.gls$', '\.glsdefs$', '\.ist$', '\.lof$', '\.lot$'
	\]
